#!/bin/bash
#===============================================================================
# FILE:         ssd_check
#
# USAGE:        ./ssd_check
#
# DESCRIPTION:  Allows to check whether SSD adjustments done during installation
#               are done correctly
#===============================================================================

echo "Check TRIM setup - discard option for / should be present"
cat /etc/fstab | grep discard
echo

echo "Check I/O scheduler..."
echo "... sda - noop should be active"
cat /sys/block/sda/queue/scheduler
echo "... sdb - cfq should be active"
cat /sys/block/sdb/queue/scheduler
echo

echo "Check swappiness - 1 should be set"
cat /proc/sys/vm/swappiness
echo

echo "Check makepkg builddir - BUILDDIR variable should be uncommented"
cat /etc/makepkg.conf | grep BUILDDIR
echo

